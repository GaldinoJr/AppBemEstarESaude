<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_tela_pontos"
    tools:context="com.example.galdino.appbemestaresaude.Telas.TelaPontos"
    android:background="@drawable/fundo_gradient">

    <TextView
        android:id="@+id/txtTitulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="PONTOS"
        android:textColor="@color/corAzulClaro"
        android:textSize="30dp"
        android:textAlignment="center"
        android:layout_marginTop="40dp"
        />

    <TextView
        android:id="@+id/txtLabelSaldo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Saldo:"
        android:textColor="@color/corAzulClaro"
        android:textSize="30dp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/txtTitulo"
        />

    <TextView
        android:id="@+id/txtSaldo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="1250"
        android:textColor="@color/corAzulClaro"
        android:textSize="30dp"
        android:layout_alignTop="@+id/txtLabelSaldo"
        android:layout_toRightOf="@+id/txtLabelSaldo"
        android:layout_marginLeft="@dimen/margemPadrao"
        />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lvPontos"
        android:layout_below="@+id/txtLabelSaldo"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
