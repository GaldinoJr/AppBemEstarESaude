<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_tela_login" tools:context=".TelaLogin"
    android:background="@drawable/fundo_gradient">


    <View
        android:id="@+id/Divisor2"
        android:layout_width="fill_parent"
        android:layout_height="2dip"
        android:layout_marginBottom="70dp"
        android:layout_centerVertical="true"
        />

    <EditText
        android:id="@+id/edtId"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:inputType="textPersonName"
        android:hint=" RE"
        android:textSize="@dimen/tamanhoTexto"
        android:textColor="@color/corAzulEscuro"
        android:textColorHint="@color/corCinza"
        android:layout_gravity="center"
        android:gravity="center|left"
        android:theme="@style/MyEditTextTheme"
        android:drawableLeft="@drawable/ic_usuario35_azul_claro"
        android:background="@drawable/fundo_txt"
        android:ems="10"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/Divisor2"
        android:layout_marginBottom="20dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"/>

    <EditText
        android:id="@+id/edtSenha"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:inputType="textPersonName"
        android:hint=" SENHA"
        android:textSize="@dimen/tamanhoTexto"
        android:textColor="@color/corAzulEscuro"
        android:textColorHint="@color/corCinza"
        android:password="true"
        android:layout_gravity="center"
        android:gravity="center|left"
        android:theme="@style/MyEditTextTheme"
        android:drawableLeft="@drawable/ic_senha35_azul_claro"
        android:textAlignment="gravity"
        android:background="@drawable/fundo_txt"
        android:ems="10"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/edtId"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        />

    <Button
        android:id="@+id/btnConectar"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="CONECTAR"
        android:textColor="@color/corBranco"
        android:textSize="@dimen/tamanhoTexto"
        android:layout_gravity="center"
        android:gravity="center"
        android:background="@drawable/fundo_botao"
        android:layout_below="@id/edtSenha"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:layout_alignLeft="@id/edtSenha"
        android:layout_alignRight="@id/edtSenha"
        />



</RelativeLayout>
